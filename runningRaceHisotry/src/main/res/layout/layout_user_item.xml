<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp" >

    <LinearLayout
        android:id="@+id/user_item_img_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/user_circle_image_border"
        android:padding="1dp" >

        <com.runningracehisotry.views.CircleImageView
            android:id="@+id/user_item_img"
            android:layout_width="@dimen/user_item_img"
            android:layout_height="@dimen/user_item_img"
            android:src="@drawable/ic_user_img" />
    </LinearLayout>

    <com.runningracehisotry.views.CustomFontTextView
        android:id="@+id/user_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_item_img_layout"
        android:textColor="@color/black"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/user_item_text"
        android:layout_toLeftOf="@+id/view_notify"
        android:layout_toStartOf="@+id/view_notify" />
    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/red_circle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/view_notify"
        android:visibility="gone"/>

</RelativeLayout>