<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/shoe_item_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:id="@+id/my_shoes_item_img_layout_fake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shoe_circle_image_border"
            android:padding="2dp"
            android:visibility="invisible" >

            <com.runningracehisotry.views.CircleImageView
                android:layout_width="@dimen/my_shoes_item_img"
                android:layout_height="@dimen/my_shoes_item_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my_shoes_item_img_layout_fake"
            android:layout_toRightOf="@+id/my_shoes_item_img_layout_fake"
            android:orientation="vertical"
            android:padding="2dp"
            android:visibility="invisible" >

            <com.runningracehisotry.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textColor="@color/text_button_bg_my_shoes"
                android:textSize="@dimen/my_shoes_item_title"
                android:textStyle="bold"
                android:visibility="invisible" />

            <com.runningracehisotry.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textColor="@color/text_button_bg_my_shoes"
                android:textSize="@dimen/my_shoes_item_text"
                android:visibility="invisible" />

            <com.runningracehisotry.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textColor="@color/text_button_bg_my_shoes"
                android:textSize="@dimen/my_shoes_item_text"
                android:visibility="invisible" />
        </LinearLayout>

        <com.runningracehisotry.views.CustomFontTextView
            android:layout_width="@dimen/race_item_delete"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/races_detail_item_time" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shoe_item_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/my_shoes_item_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shoe_circle_image_border"
            android:padding="2dp" >

            <com.runningracehisotry.views.CircleImageView
                android:id="@+id/my_shoes_item_img"
                android:layout_width="@dimen/my_shoes_item_img"
                android:layout_height="@dimen/my_shoes_item_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my_shoes_item_img_layout"
            android:layout_toRightOf="@+id/my_shoes_item_img_layout"
            android:orientation="vertical"
            android:padding="2dp" >

            <com.runningracehisotry.views.CustomFontTextView
                android:id="@+id/my_shoes_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_button_bg_my_shoes"
                android:textSize="@dimen/my_shoes_item_title"
                android:textStyle="bold" />

            <com.runningracehisotry.views.CustomFontTextView
                android:id="@+id/my_shoes_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_button_bg_my_shoes"
                android:textSize="@dimen/my_shoes_item_text" />

            <com.runningracehisotry.views.CustomFontTextView
                android:id="@+id/my_shoes_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_button_bg_my_shoes"
                android:textSize="@dimen/my_shoes_item_text" />
        </LinearLayout>

        <ImageView
            android:id="@+id/my_shoes_check_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_check_button"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/D:/Workspace/Project/New%20Project/New%20folder/RunningRaceHisotry/runningRaceHisotry/src/main/res/layout/layout_shoes_item.xml -->